@model Chat.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/LoginViewStyle.css" />
    <title>Авторизация</title>
</head>

<body>
    <div class="page-align">
        <div class="b-login__popup" id="popup">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)

                <h2>Авторизация</h2>
                <label class="b-login__field">
                    <span class="b-login__field__lbl margin1">Логин</span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "inputText" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </label>
                <label class="b-login__field">
                    <span class="b-login__field__lbl">Пароль</span>
                    @Html.PasswordFor(m => m.Password, new { Textmode = "passwrod", @class = "inputText" })
                    @Html.ValidationMessageFor(m => m.Password)
                </label>
                <div class="checkbox-line">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="b-login__field">
                    <button class="button" type="submit">Войти</button>
                </div>

            }
            <form action="@Url.Action("Register", "Account")">
                <button class="button" style="box-sizing: content-box;">Регистрация</button>
            </form>
        </div>
       
               
        
        
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}