@model Chat.Models.RegisterViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/LoginViewStyle.css" />
    <title>Авторизация</title>
</head>

<body>
    <div class="page-align">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary()
            <div class="b-login__popup" id="popup">
                <h2>Регистрация</h2>
                <label class="b-login__field">
                    <span class="b-login__field__lbl margin1">Логин</span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "inputText" })
                </label>
                <label class="b-login__field">
                    <span class="b-login__field__lbl">Пароль</span>
                    @Html.PasswordFor(m => m.Password, new { Textmode = "passwrod", @class = "inputText" })
                </label>
                <label class="b-login__field">
                    <span class="b-login__field__lbl">Подтвердите пароль</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { Textmode = "passwrod", @class = "inputText" })
                </label>
                <div class="b-login__field">
                    <button class="button" type="submit" value="Register">Зарегистрироваться</button>
                </div>
            </div>
        }
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}